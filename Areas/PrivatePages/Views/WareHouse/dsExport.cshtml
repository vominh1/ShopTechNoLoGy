@model IEnumerable<ShopTechNoLoGy.Models.XuatKho>

@{
    ViewBag.Title = "Danh Sách Xuất Kho";
}

<h2>DANH SÁCH XUẤT KHO</h2>

<p>
    @Html.ActionLink("Thêm Phiếu Xuất", "Export", "WareHouse", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().MaPhieuXuat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NgayXuat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().sanPham.tenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().SoLuongXuat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NguoiXuat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().LyDoXuat)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaPhieuXuat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayXuat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sanPham.tenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongXuat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NguoiXuat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LyDoXuat)
                </td>
            </tr>
        }
    </tbody>
</table>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
