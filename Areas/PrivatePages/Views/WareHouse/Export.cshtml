@model ShopTechNoLoGy.Models.XuatKho

@{
    ViewBag.Title = "Xuất Kho";
}

<h2>XUẤT KHO</h2>

@using (Html.BeginForm("Export", "WareHouse", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.maSP, "Sản Phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("maSP", new SelectList(ViewBag.SanPhamList, "maSP", "TenSP", Model.maSP), "Chọn sản phẩm", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.maSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SoLuongXuat, "Số Lượng Xuất", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.SoLuongXuat, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SoLuongXuat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LyDoXuat, "Lý Do Xuất", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.LyDoXuat, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(model => model.LyDoXuat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xuất Kho" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "dsExport", "WareHouse", null, new { @class = "btn btn-default" })
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
