@model PagedList.IPagedList<ShopTechNoLoGy.Models.ChiTietNgayModel>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Chi tiết doanh thu trong tháng " + ViewBag.Thang + "/" + ViewBag.Nam;
    Layout = "~/Areas/PrivatePages/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết doanh thu trong tháng @ViewBag.Thang/@ViewBag.Nam</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Doanh thu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ngay.ToString("dd/MM/yyyy")</td>
                <td>@item.DoanhThuNgay.ToString("C0")</td>
            </tr>
        }
    </tbody>
</table>

@{
    // Tính tổng doanh thu
    var tongDoanhThu = Model.Sum(x => x.DoanhThuNgay);
}

<h3>Tổng doanh thu trong tháng @ViewBag.Thang/@ViewBag.Nam: @tongDoanhThu.ToString("C0")</h3>

<!-- Phân trang -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("ChiTietDoanhThuNgaytrongthang", new { thang = ViewBag.Thang, nam = ViewBag.Nam, page = Model.PageNumber - 1 })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("ChiTietDoanhThuNgaytrongthang", new { thang = ViewBag.Thang, nam = ViewBag.Nam, page = i })">@i</a>
            </li>
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("ChiTietDoanhThuNgaytrongthang", new { thang = ViewBag.Thang, nam = ViewBag.Nam, page = Model.PageNumber + 1 })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>

<!-- Nút Quay lại -->
<a href="@Url.Action("Doanhthuthang", "Revenue")" class="btn btn-secondary mt-3">
    <i class="fas fa-arrow-left"></i> Quay lại
</a>
