@using ShopTechNoLoGy.Models
@{
    ViewBag.Title = "Index";
    List<sanPham> ds = ViewData["DanhSachSP"] as List<sanPham>;

}
<style>
    form {
        display: inline;
    }
    .font_size_TSP{
        width:350px;
    }
</style>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách sản phẩm của hệ thống </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Quản trị </a></li>
                    <li class="breadcrumb-item active">Danh sách sản phẩm đã duyệt</li>
                </ol>
            </div>
        </div>
    </div><!--/.container-fluid -->
</section>
<!- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> </h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>

                @*<button type="button" class="btn btn-tool" data-card-widget-"remove" data-toggle="tooltip" title="Remove"> fa-times"></i>
                    </div>
                    </div>
                    <i class="fa
                    </button>*@
            </div>
        </div>
        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Ảnh Minh họa</th>
                        <th>Tên Sản phẩm</th>
                        <th>Ngày đăng</th>
                        <th>Tài khoản</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (sanPham i in ds)
                        {
                                        <tr>
                                            <td class="cart_product" style="width:200px">
                                                <a href=""><img src="@Common.getImagesOfProductById(i.maSP)" width="40%" height="30%" /></a>
                                            </td>
                                            <td class="font_size_TSP">@i.tenSP </td>
                                            <td>@string.Format("{0: hh:mm[dd/MM/yyyy]}", i.ngayDang)</td>
                                            <td>@i.taiKhoanTV.hoDem @i.taiKhoanTV.tenTV</td>

                                            <td>
                                                @using (Html.BeginForm("active", "Products", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="maSanPham" value="@i.maSP" />
                                                    <button  class="btn btn-success" title="Cho phép hiểm thị trên tất cả các trang công khai">Cấm</button>}
                                                @using (Html.BeginForm("", "Products", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="maSanPham" value="@i.maSP" />
                                                    <button class="btn btn-default" title="Cho phép sửa bài viêt "> Sửa SP </button>

                                                }
                                                @using (Html.BeginForm("Delete", "Products", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="maSanPham" value="@i.maSP" />
                                                    <button class="btn btn-danger" title="Cho phép xóa sản phẩm.">xóa</button>
                                                }

                                            </td>

                                        </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
        <div class="card-footer">
            footer
        </div>
    </div>
</section>




