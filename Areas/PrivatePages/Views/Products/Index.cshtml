@using ShopTechNoLoGy.Models
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách sản phẩm";
    var products = ViewData["DanhSachSP"] as IPagedList<sanPham>;
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    .product-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-horizontal > .btn {
        margin-right: 5px;
    }

    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
    }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
    }
</style>

<div class="page-header">
    <div class="container">
        <h1 class="display-4">Danh sách sản phẩm</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#" class="text-white">Quản trị</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">Danh sách sản phẩm đã duyệt</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">Danh sách sản phẩm của hệ thống</h3>
            <button type="button" class="btn btn-light" data-bs-toggle="collapse" data-bs-target="#productTable" aria-expanded="true" aria-controls="productTable">
                <i class="fas fa-minus"></i>
            </button>
        </div>
        <div id="productTable" class="collapse show">
            <div class="card-body">
                <!-- Search Form -->
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <div class="input-group mb-3">
                        <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm sản phẩm..." aria-label="Tìm kiếm sản phẩm">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Ảnh Minh họa</th>
                                <th>Tên Sản phẩm</th>
                                <th>Ngày đăng</th>
                                <th>Tài khoản</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in products)
                            {
                                <tr>
                                    <td>
                                        <img src="@Common.getImagesOfProductById(i.maSP)" alt="@i.tenSP" class="product-image">
                                    </td>
                                    <td>@i.tenSP</td>
                                    <td>@i.ngayDang</td>
                                    <td>@i.taiKhoanTV.hoDem @i.taiKhoanTV.tenTV</td>
                                    <td>
                                        <div class="btn-group-horizontal">
                                            <form action="@Url.Action("Active", "Products")" method="post" style="display:inline;">
                                                <input type="hidden" name="maSanPham" value="@i.maSP">
                                                <button type="submit" class="btn btn-warning btn-sm" title="Cấm hiển thị sản phẩm">
                                                    <i class="fas fa-ban me-1"></i> Cấm
                                                </button>
                                            </form>
                                            <a href="@Url.Action("Edit", new { maSanPham = i.maSP })" class="btn btn-info btn-sm" title="Sửa sản phẩm">
                                                <i class="fas fa-edit me-1"></i> Sửa SP
                                            </a>
                                            <form action="@Url.Action("Delete", "Products")" method="post" style="display:inline;">
                                                <input type="hidden" name="maSanPham" value="@i.maSP">
                                                <button type="submit" class="btn btn-danger btn-sm" title="Xóa sản phẩm">
                                                    <i class="fas fa-trash-alt me-1"></i> Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @if (products.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", "Products", new { page = products.PageNumber - 1, searchString = Request.QueryString["searchString"] })" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= products.PageCount; i++)
                        {
                            <li class="page-item @(i == products.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", "Products", new { page = i, searchString = Request.QueryString["searchString"] })">@i</a>
                            </li>
                        }
                        @if (products.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", "Products", new { page = products.PageNumber + 1, searchString = Request.QueryString["searchString"] })" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <div class="card-footer text-muted">
            Tổng số sản phẩm: @products.TotalItemCount
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
        alert('@TempData["SuccessMessage"]');
        window.location.href = '@Url.Action("Index", "Products")';
        </text>
    }
</script>
