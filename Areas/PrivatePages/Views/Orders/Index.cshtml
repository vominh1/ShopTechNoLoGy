@using ShopTechNoLoGy.Models
@{
    ViewBag.Title = "Danh sách đơn hàng";
    List<donHang> ds = ViewData["DanhSachDonHang1"] as List<donHang>;
}


    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .content-header {
            background-color: #007bff;
            color: white;
            padding:  0px !important;
            margin-bottom: 40px;
        }

        .card {
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border: none;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            padding: 20px;
        }

        .table {
            color: #495057;
            
        }

            .table thead th {
                background-color: #e9ecef;
                color: #495057;
                border-color: #dee2e6;
            }

        .btn-tool {
            color: #6c757d;
        }

        .btn {
            margin: 5px;
            border-radius: 20px;
         
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e9ecef;
            text-align: center;
            padding: 20px;
            font-style: italic;
            color: #6c757d;
        }

        .table-responsive {
            padding: 10px;
        }
    </style>
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <h1>Danh sách đơn hàng của bạn</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example2" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Số đơn hàng</th>
                                    <th>Mã khách hàng</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày Đặt</th>
                                    <th>Tài Khoản</th>
                                    <th>Địa chỉ giao hàng</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ds != null && ds.Count > 0)
                                {
                                    foreach (var order in ds)
                                    {
                                        <tr>
                                            <td>@order.soDH</td>
                                            <td>@order.maKH</td>
                                            <td>Chưa duyệt</td>
                                            <td>@order.ngayDat</td>
                                            <td>@order.taiKhoan</td>
                                            <td>@order.diaChiGH</td>
                                            <td>
                                                @using (Html.BeginForm("Active", "Orders", FormMethod.Post, new { @class = "d-inline" }))
                                                {
                                                    <input type="hidden" name="maDonHang" value="@order.soDH" />
                                                    <button class="btn btn-success" title="Cho phép hiển thị trên tất cả các trang công khai"><i class="fas fa-check"></i> Kích hoạt</button>
                                                }
                                                @using (Html.BeginForm("Delete", "Orders", FormMethod.Post, new { @class = "d-inline" }))
                                                {
                                                    <input type="hidden" name="maDonHang" value="@order.soDH" />
                                                    <button class="btn btn-danger" title="Xóa đơn hàng"><i class="fas fa-trash"></i> Từ chối</button>
                                                }
                                                @using (Html.BeginForm("OrderDetails", "Orders", FormMethod.Post, new { @class = "d-inline" }))
                                                {
                                                    <input type="hidden" name="maDonHang" value="@order.soDH" />
                                                    <button class="btn btn-info" title="Xem chi tiết đơn hàng"><i class="fas fa-info-circle"></i> Chi tiết</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">Không có đơn hàng nào để hiển thị.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <p>© 2024 ShopTechNoLoGy. Tất cả các quyền được bảo lưu.</p>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>

