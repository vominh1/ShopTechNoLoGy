@model ShopTechNoLoGy.Models.OrderDetailsModel

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Areas/PrivatePages/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Chi Tiết Đơn Hàng</h2>

@if (Model == null)
{
    <p>Không có đơn hàng nào.</p>
}
else
{
    <div class="card mb-4">
        <div class="card-header">
            <h3>Thông tin đơn hàng</h3>
        </div>
        <div class="card-body">
            <p><strong>Đơn hàng:</strong> @Model.soDH</p>
            <p><strong>Ngày đặt:</strong> @Model.NgayDat.ToShortDateString()</p>

            <h4 class="mt-4">Thông tin khách hàng</h4>
            <p><strong>Tên khách hàng:</strong> @Model.TenKH</p>
            <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
            <p><strong>Số điện thoại:</strong> @Model.SoDt</p>
            <p><strong>Email:</strong> @Model.Email</p>
        </div>
    </div>

    <h4>Chi tiết sản phẩm</h4>
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Mã Sản Phẩm</th>
                <th>Tên Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Giá Bán</th>
                <th>Giảm Giá</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.MaSP</td>
                    <td>@item.TenSP</td>
                    <td>@item.SoLuong</td>
                    <td>@string.Format("{0:#,##0 VNĐ}", item.GiaBan)</td>
                    <td>@string.Format("{0:#,##0 VNĐ}", item.GiamGia)</td>
                    <td>@string.Format("{0:#,##0 VNĐ}", item.ThanhTien)</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Tổng thành tiền: @string.Format("{0:#,##0 VNĐ}", Model.TongThanhTien)</h4>
}

<div class="form-group mt-4">
    <a href="@Url.Action("Index", "Customer")" class="btn btn-primary">Quay lại danh sách đơn hàng</a>
</div>
