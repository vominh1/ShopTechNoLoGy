@using ShopTechNoLoGy.Models
@{
    ViewBag.Title = "Index";
    List<baiViet> ds = ViewData["DanhSachBV"] as List<baiViet>;

}
<style>
    form{display:inline;}
</style>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách các bài viết trong hệ thống</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Quản trị </a></li>
                    <li class="breadcrumb-item active">Danh sách bài viết đã duyệt</li>
                </ol>
            </div>
        </div>
    </div><!--/.container-fluid -->
</section>
<!- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> </h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>

                @*<button type="button" class="btn btn-tool" data-card-widget-"remove" data-toggle="tooltip" title="Remove"> fa-times"></i>
                    </div>
                    </div>
                    <i class="fa
                    </button>*@
            </div>
        </div>
        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>

                        <th>Tên bài viết</th>
                        <th>Ngày đăng</th>
                        <th>Tài khoản</th>
                        <th>Số lần đọc</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (baiViet i in ds)
                        {
                            <tr>

                                <td>@i.tenBV </td>
                                <td>@string.Format("{0: hh:mm[dd/MM/yyyy]}",i.ngayDang)</td>
                                <td>@i.taiKhoanTV.hoDem @i.taiKhoanTV.tenTV</td>
                                <td>@i.solandoc</td>
                                <td>
                                    @using (Html.BeginForm("active", "Articles", FormMethod.Post))
                                    {
                                        <input type="hidden" name="maBaiViet" value="@i.maBV" />
                                        <button class="btn btn-success" title="Cho phép hiểm thị trên tất cả các trang công khai">Cấm Hiễn thị</button>}
                                    @using (Html.BeginForm("", "Articles", FormMethod.Post))
                                    {
                                        <input type="hidden" name="maBaiViet" value="@i.maBV" />
                                        <button class="btn btn-default" title="Cho phép sửa bài viêt "> Sửa bài viết</button>

                                    }
                                    @using (Html.BeginForm("Delete", "Articles", FormMethod.Post))
                                    {
                                        <input type="hidden" name="maBaiViet" value="@i.maBV" />
                                        <button class="btn btn-danger" title="Cho phép xóa bài viết"> xóa</button>
                                    }

                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
        <div class="card-footer">
            footer
        </div>
    </div>
</section>




