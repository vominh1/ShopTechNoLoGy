@model ShopTechNoLoGy.Models.baiViet

@{
    ViewBag.Title = "Chỉnh sửa bài viết";
    Layout = "~/Areas/PrivatePages/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        @using (Html.BeginForm("editArticle", "Articles", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <!-- left column -->
                <div class="col-md-8">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin bài viết</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="card-body">
                            @Html.HiddenFor(m => m.maBV)

                            <div class="form-group">
                                <label for="tenBV">Tên bài viết</label>
                                @Html.TextBoxFor(m => m.tenBV, new { @class = "form-control", @placeholder = "Nhập tên bài viết" })
                                @Html.ValidationMessageFor(m => m.tenBV, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="ndTomTat">Nội dung tóm tắt</label>
                                @Html.TextAreaFor(m => m.ndTomTat, new { @rows = 3, @class = "form-control", @placeholder = "Nhập nội dung tóm tắt" })
                                @Html.ValidationMessageFor(m => m.ndTomTat, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="noiDung">Nội dung</label>
                                @Html.TextAreaFor(m => m.noiDung, new { @class = "form-control textarea", @placeholder = "Nhập nội dung bài viết", @style = "width:100%; height:400px;line-height:18px;border:1px solid #dddddd;font-size:14px;padding:10px" })
                                @Html.ValidationMessageFor(m => m.noiDung, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="ngayDang">Ngày đăng</label>
                                @Html.TextBoxFor(m => m.ngayDang, new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            <div class="form-group">
                                <label for="taiKhoan">Tài khoản</label>
                                @Html.TextBoxFor(m => m.taiKhoan, new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            @*<div class="form-group">
                                <label for="maLoai">Loại bài viết</label>
                                @Html.DropDownListFor(m => m.maLoai, (IEnumerable<SelectListItem>)ViewBag.MaLoaiList, "Chọn loại bài viết", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.maLoai, "", new { @class = "text-danger" })
                            </div>*@
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col-md-8 -->
                <!-- right column -->
                <div class="col-md-4">
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Hình đại diện</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <img id="imgPreview" src="@Model.hinhDD" class="img-thumbnail" style="width:100%;" />
                            </div>
                            <div class="form-group">
                                <label for="hinhdaidien">Chọn hình ảnh</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="hinhdaidien" name="hinhdaidien" onchange="previewImage(this);">
                                        <label class="custom-file-label" for="hinhdaidien">Chọn tệp</label>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.hinhDD, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        }
    </div>
    <!-- /.container-fluid -->
</section>

<script type="text/javascript">
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgPreview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
