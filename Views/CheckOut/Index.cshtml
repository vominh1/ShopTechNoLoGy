@model ShopTechNoLoGy.Models.khachHang
@using ShopTechNoLoGy.Models;
@{
    ViewBag.Title = "Đặt Hàng";

    CartShop1 x = ViewData["Cart"] as CartShop1;
}
<style>
    .slider_bg_1 {
        background-image: url(../images/banner/banner2.jpg);
    }

    .breadcam_bg {
        background-image: url(../images/banner/banner2.jpg);
    }

    #cart_items .cart_info .cart_menu {
        background: #FE980F;
        color: #fff;
        font-size: 16px;
        font-family: 'Roboto', sans-serif;
        font-weight: normal;
    }
</style>
<link rel="shortcut icon" href="~/images/ico/favicon.ico">
<link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/images/ico/apple-touch-icon-144-precomposed.png">
<link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/images/ico/apple-touch-icon-114-precomposed.png">
<link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/images/ico/apple-touch-icon-72-precomposed.png">
<link rel="apple-touch-icon-precomposed" href="~/images//ico/apple-touch-icon-57-precomposed.png">





<div class="bradcam_area breadcam_bg overlay1">
    <h3 style="margin-top:0">Thanh toán</h3>
</div>
<section class="checkout-area py-5">
    <div class="container">
        <h2 class="mb-4 text-center">Thông tin thanh toán</h2>
        @using (Html.BeginForm("SaveToDataDase", "CheckOut", FormMethod.Post, new { @class = "checkout-form" }))
        {
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Thông tin khách hàng</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="hoTen">Họ tên khách hàng</label>
                                @Html.TextBoxFor(m => m.tenKH, new { @class = "form-control", @placeholder = "Nhập họ tên" })
                                @Html.ValidationMessageFor(m => m.tenKH, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Giới tính</label>
                                <div>
                                    <div class="form-check form-check-inline">
                                        @Html.RadioButtonFor(m => m.gioiTinh, true, new { @class = "form-check-input", @id = "male" })
                                        <label class="form-check-label" for="male">Nam</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        @Html.RadioButtonFor(m => m.gioiTinh, false, new { @class = "form-check-input", @id = "female" })
                                        <label class="form-check-label" for="female">Nữ</label>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.gioiTinh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="ngaySinh">Ngày sinh</label>
                                @Html.TextBoxFor(m => m.ngaySinh, new { @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ngaySinh, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Thông tin liên lạc</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="soDt">Số điện thoại</label>
                                @Html.TextBoxFor(m => m.soDT, new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
                                @Html.ValidationMessageFor(m => m.soDT, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="mail">Email</label>
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Nhập địa chỉ email" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="addr">Địa chỉ giao hàng</label>
                                @Html.TextBoxFor(m => m.diaChi, new { @class = "form-control", @placeholder = "Nhập địa chỉ giao hàng" })
                                @Html.ValidationMessageFor(m => m.diaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Thông tin khác</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ghiChu">Ghi chú</label>
                                @Html.TextAreaFor(m => m.ghiChu, new { @class = "form-control", @placeholder = "Nhập ghi chú (nếu có)", @rows = "8" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="mb-3">Thông tin sản phẩm</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ctDonHang i in x.SanPhamDC.Values)
                                {
                                <tr>
                                    <td><img src="@Common.getImagesOfProductById(i.maSP)" alt="@Common.getNameOfProductById(i.maSP)" class="img-thumbnail" style="max-width: 100px;"></td>
                                    <td>
                                        <h5>@Common.getNameOfProductById(i.maSP)</h5>
                                        <small class="text-muted">Mã SP: @i.maSP</small>
                                    </td>
                                    <td>@string.Format("{0:#,##0 VNĐ}", i.giaBan)</td>
                                    <td>@i.soLuong</td>
                                    <td>@x.moneyOfOneProduct(i)</td>
                                   
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 offset-md-6">
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0 text-white" >Tổng kết đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Tổng trị giá
                                    <span>@string.Format("{0:#,##0 VNĐ}", x.totalOfCartShop())</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Thuế VAT (10%)
                                    <span>@string.Format("{0:#,##0 VNĐ}", (x.totalOfCartShop() * 10) / 100)</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Phí giao hàng
                                    <span class="text-success">Miễn phí</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <strong>Tổng thành tiền</strong>
                                    <strong>@string.Format("{0:#,##0 VNĐ}", (x.totalOfCartShop() + (x.totalOfCartShop() * 10 / 100)))</strong>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12 text-right">
                    <a href="@Url.Action("Index", "CartShop")" class="btn btn-secondary mr-2">
                        <i class="fa fa-arrow-left"></i> Quay lại giỏ hàng
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-credit-card"></i> Thanh toán
                    </button>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .checkout-area {
        background-color: #f8f9fa;
    }

    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .card-header {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #FE980F;
        border-color: #FE980F;
    }

        .btn-primary:hover {
            background-color: #e88a0c;
            border-color: #e88a0c;
        }
</style>

