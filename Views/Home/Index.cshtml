<div class="popular_courses">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center">
                    <h3 style="
                font-size: 36px;
                margin-bottom: 20px;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
                background: linear-gradient(45deg, #f39c12, #e67e22);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                font-weight: bold;
                letter-spacing: 1px;
            ">
                        Danh sách sản phẩm
                    </h3>

                    <p style="
                font-size: 20px;
                max-width: 600px;
                margin: 0 auto 25px;
                line-height: 1.6;
                text-align: center;
                font-weight: 300;
                background: linear-gradient(45deg, #d35400, #e67e22);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            ">
                        Chúng tôi cung cấp hơn 5 loại sản phẩm bánh kẹo phổ biến trên thế giới
                    </p>

                    <div class="arrow-down text-center" style="margin-top: 30px;">
                        <div style="
                    width: 50px;
                    height: 50px;
                    border-radius: 50%;
                    background: linear-gradient(145deg, #3498db, #2980b9);
                    display: inline-flex;
                    justify-content: center;
                    align-items: center;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                ">
                            <i class="fa fa-arrow-down" style="font-size: 24px; color: #fff;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12" style="margin-bottom:-20px">
                <div class="course_nav">
                    <nav>
                        <ul class="nav" id="myTab" role="tablist">
                            @{
                                int d = 0;
                                foreach (loaiSP i in Common.getCategories())
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(d++ == 0 ? "active" : "")" id="@i.maLoai-tab"
                                           data-toggle="tab" href="#@i.maLoai" role="tab"
                                           aria-controls="@i.maLoai" aria-selected="false">@i.loaiSP1</a>
                                    </li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="all_courses">
        <div class="container">
            <div class="tab-content" id="myTabContent">
                @{
                    int m = 0;
                    foreach (loaiSP i in Common.getCategories())
                    {
                        <div class="tab-pane fade show @(m++ == 0 ? "active" : "")" id="@i.maLoai" role="tabpanel" aria-labelledby="@i.maLoai-tab">
                            <div class="row">
                                @{
                                    int n = 0;
                                    foreach (sanPham j in Common.getProductByLoaiSP(i.maLoai))
                                    {
                                        <div class="col-xl-3 col-lg-3 col-md-6">
                                            <div class="single_courses">
                                                <div class="thumb">
                                                    <a href="@Url.Action("Index", "ProductDetails", new { maSP = j.maSP })">
                                                        <img src="@j.hinhDD" alt="" style="height:300px">
                                                    </a>
                                                </div>
                                                <div class="courses_info" style="height:250px">
                                                    <span>@i.loaiSP1</span>
                                                    <h3>
                                                        <a href="@Url.Action("Index", "ProductDetails", new { maSP = j.maSP })">
                                                            @((j.tenSP.Length > 30) ? j.tenSP.Substring(0, 25) + "..." : j.tenSP)
                                                        </a>
                                                    </h3>
                                                    <div class="star_prise d-flex justify-content-between">
                                                        <div class="star ">

                                                            <b><a>Kho: (@j.SoLuongTonKho)</a></b>
                                                        </div>
                                                        <div class="prise">
                                                            <span class="active_prise">
                                                                @String.Format("{0:# VND}", @j.giaBan)
                                                            </span>
                                                            <br>
                                                            @*Kiểm tra số lượng tồn kho nếu >0 thì cho mua else thông báo hết hàng *@
                                                            @if (j.SoLuongTonKho > 0)
                                                            {
                                                                using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
                                                                {
                                                                    <input name="maSP" type="hidden" value="@j.maSP" />
                                                                    <button class="btn btn-primary">Chọn mua</button>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <span class="out-of-stock">Hết hàng</span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        if (n++ >= 10)
                                        {
                                            break;
                                        }
                                    }
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

