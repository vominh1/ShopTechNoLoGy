@using ShopTechNoLoGy.Models
@{
    ViewBag.Title = "Bài viết";
    baiViet x = ViewData["Baicanxem"] as baiViet;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .breadcam_bg {
        background-image: url(../images/banner/banner2.jpg);
        background-size: cover;
        background-position: center;
    }

    .bradcam_area {
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .blog_details {
        margin-top: 20px;
        font-size: 16px;
        line-height: 1.6;
        color: #333;
    }

    .feature-img img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .single_sidebar_widget {
        margin-bottom: 30px;
    }

        .single_sidebar_widget h4 {
            font-size: 18px;
            margin-bottom: 20px;
            color: #333;
        }

        .single_sidebar_widget .cat-list li {
            margin-bottom: 10px;
        }

            .single_sidebar_widget .cat-list li a {
                color: #333;
                display: flex;
                justify-content: space-between;
            }

                .single_sidebar_widget .cat-list li a:hover {
                    color: #007bff;
                    text-decoration: none;
                }

    .primary-bg {
        background-color: #007bff;
    }

    .btn_1 {
        padding: 10px 20px;
        border-radius: 50px;
    }

        .btn_1:hover {
            background-color: #0056b3;
        }
</style>

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg overlay1">
    <h3>@x.tenBV</h3>
</div>
<!-- bradcam_area_end -->
<!--================Blog Area =================-->
<section class="blog_area single-post-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post">
                    <div class="feature-img">
                        <img class="img-fluid" style="max-height:400px; max-width:500px" src="@x.hinhDD" alt="@x.tenBV">
                    </div>
                    <div class="blog_details">
                        @Html.Raw(x.noiDung)
                    </div>
                </div>
                <!-- Comment form and related sections are commented out for now -->
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <form action="#">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Search Keyword" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search Keyword'">
                                    <div class="input-group-append">
                                        <button class="btn" type="button"><i class="ti-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn" type="submit">Search</button>
                        </form>
                    </aside>
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title">Thông tin thêm</h4>
                        <ul class="list cat-list">
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Người duyệt bài: @x.taiKhoan</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Tên bài viết: @x.tenBV</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Số lần đọc: @x.solandoc</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex">
                                    <p>Ngày đăng: @x.ngayDang</p>
                                </a>
                            </li>
                        </ul>
                    </aside>
                    <!-- Other sidebar widgets are commented out for now -->
                </div>
            </div>
        </div>
    </div>
</section>
