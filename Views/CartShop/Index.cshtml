@using ShopTechNoLoGy.Models

@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mua hàng";
    CartShop1 x = ViewData["Cart"] as CartShop1; }

<style>
    .courses_details_banner {
        background-image: url(../images/banner/banner2.jpg);
    }

    .breadcam_bg {
        background-image: url(../images/banner/banner2.jpg);
    }

    .bradcam_area {
        max-height: 100px;
        margin: 0;
    }

</style>
<style>
    #cart_items {
        background-color: #f8f9fa;
    }

    .table th {
        font-weight: 600;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="bradcam_area breadcam_bg overlay1">
    <h3 style="margin-top:0 ;margin-bottom:0">Giỏ hàng</h3>
</div>
<section id="cart_items" class="py-5">
    <div class="container">
       
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th class="text-center">Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ctDonHang i in x.SanPhamDC.Values)
                    {
                        <tr>
                            <td>
                                <img src="@Common.getImagesOfProductById(i.maSP)" class="img-thumbnail" width="100" alt="@Common.getNameOfProductById(i.maSP)">
                            </td>
                            <td>
                                <h5><a href="#" class="text-dark">@Common.getNameOfProductById(i.maSP)</a></h5>
                                <small class="text-muted">Mã SP: @i.maSP</small>
                            </td>
                            <td>@string.Format("{0:#,##0đ}", i.giaBan)</td>
                            <td>
                                <div class="d-flex justify-content-center align-items-center">
                                    @using (Html.BeginForm("decrease", "CartShop", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        <input type="hidden" name="maSP" value="@i.maSP" />
                                        <button class="btn btn-sm btn-outline-secondary" type="submit">-</button>
                                    }
                                    <input class="form-control form-control-sm text-center mx-2" type="text" name="quantity" value="@i.soLuong" readonly style="width: 50px;">
                                    @using (Html.BeginForm("increase", "CartShop", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        <input type="hidden" name="maSP" value="@i.maSP" />
                                        <button class="btn btn-sm btn-outline-secondary" type="submit">+</button>
                                    }
                                </div>
                            </td>
                            <td>@x.moneyOfOneProduct(i)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-5">
            <div class="col-md-6 offset-md-6">
                <div class="card">
                    <div class="card-header bg-dark ">
                        <h4 class="mb-0 text-white ">Tổng kết đơn hàng</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Tổng trị giá
                                <span>@x.totalOfCartShop()</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Thuế VAT 10%
                                <span>@((x.totalOfCartShop() * 10) / 100)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Phí giao hàng
                                <span class="text-success">Miễn phí</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Tổng thành tiền</strong>
                                <strong>@(x.totalOfCartShop() + (x.totalOfCartShop() * 10 / 100))</strong>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-outline-secondary" href="#">Cập nhật giỏ hàng</a>
                        <a class="btn btn-primary float-right" href="@Url.Action("Index", "Checkout")">Thanh toán</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
